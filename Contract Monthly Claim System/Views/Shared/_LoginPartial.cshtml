@using Microsoft.AspNetCore.Identity
@using Contract_Monthly_Claim_System.Models
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user-circle me-2"></i>@User.Identity?.Name
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li>
                    <span class="dropdown-item-text text-muted small">Signed in as</span>
                </li>
                <li><hr class="dropdown-divider"></li>

                @* Dashboard Switching Logic *@
                @if (User.IsInRole("Lecturer"))
                {
                    <li>
                        <a class="dropdown-item" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-chalkboard-teacher me-2"></i>Lecturer Dashboard
                        </a>
                    </li>
                }
                @if (User.IsInRole("ProgrammeCoordinator"))
                {
                    <li>
                        <a class="dropdown-item" asp-controller="Approval" asp-action="CoordinatorDashboard">
                            <i class="fas fa-user-tie me-2"></i>Coordinator Dashboard
                        </a>
                    </li>
                }
                @if (User.IsInRole("AcademicManager"))
                {
                    <li>
                        <a class="dropdown-item" asp-controller="Approval" asp-action="ManagerDashboard">
                            <i class="fas fa-user-graduate me-2"></i>Manager Dashboard
                        </a>
                    </li>
                }
                @if (User.IsInRole("SystemAdministrator") || User.IsInRole("AcademicManager"))
                {
                    <li>
                        <a class="dropdown-item" asp-controller="HR" asp-action="Index">
                            <i class="fas fa-users-cog me-2"></i>HR / Admin Dashboard
                        </a>
                    </li>
                }

                <li><hr class="dropdown-divider"></li>

                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="fas fa-user-cog me-2"></i>My Profile
                    </a>
                </li>

                <li><hr class="dropdown-divider"></li>

                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="dropdown-item text-danger">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <!-- Updated Link: Points to Profile Controller -> Create Action -->
            <a class="nav-link text-white" href="/Profile/Create">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>