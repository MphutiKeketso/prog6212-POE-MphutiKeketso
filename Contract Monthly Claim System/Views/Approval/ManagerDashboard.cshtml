@using Contract_Monthly_Claim_System.Models.View
@model ManagerDashboardViewModel
@{
    ViewData["Title"] = "Academic Manager Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="page-title">Academic Manager Dashboard</h2>
            <p class="text-muted">Welcome, @Model.ManagerName</p>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card card-custom text-center p-3">
                <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                <h4>@Model.Statistics.PendingReviewCount</h4>
                <small>Pending</small>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card card-custom text-center p-3">
                <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                <h4>@Model.Statistics.ApprovedThisMonth</h4>
                <small>Approved</small>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card card-custom text-center p-3">
                <i class="fas fa-times-circle fa-2x text-danger mb-2"></i>
                <h4>@Model.Statistics.RejectedThisMonth</h4>
                <small>Rejected</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-custom text-center p-3">
                <i class="fas fa-dollar-sign fa-2x text-info mb-2"></i>
                <h4>@Model.Statistics.TotalAmountPending.ToString("C0")</h4>
                <small>Pending Amount</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-custom text-center p-3">
                <i class="fas fa-money-bill-wave fa-2x text-success mb-2"></i>
                <h4>@Model.Statistics.TotalAmountApproved.ToString("C0")</h4>
                <small>Approved This Month</small>
            </div>
        </div>
    </div>

    @if (Model.Statistics.OverdueClaims > 0)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle me-2"></i>
            <strong>Urgent:</strong> You have @Model.Statistics.OverdueClaims overdue claim(s) requiring immediate attention (over 5 days since coordinator approval).
        </div>
    }

    <!-- Pending Claims -->
    <div class="row">
        <div class="col-12">
            <div class="card card-custom">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Claims Awaiting Final Approval</h5>
                </div>
                <div class="card-body">
                    @if (Model.PendingClaims.Any())
                    {
                        @foreach (var claim in Model.PendingClaims)
                        {
                            <div class="card mb-3 border-@(claim.Priority == "High" ? "danger" : "secondary")">
                                <div class="card-header bg-light">
                                    <div class="row align-items-center">
                                        <div class="col-md-6">
                                            <h5 class="mb-0">@claim.ClaimNumber</h5>
                                            <small class="text-muted">@claim.LecturerName (@claim.LecturerEmail)</small>
                                        </div>
                                        <div class="col-md-6 text-end">
                                            <span class="badge bg-primary me-2">@claim.ClaimMonth.ToString("MMM yyyy")</span>
                                            <span class="badge bg-@(claim.Priority == "High" ? "danger" : claim.Priority == "Medium" ? "warning" : "secondary")">
                                                @claim.Priority Priority
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h6>Claim Items (@claim.ItemCount):</h6>
                                            <table class="table table-sm">
                                                <thead>
                                                    <tr>
                                                        <th>Module</th>
                                                        <th>Hours</th>
                                                        <th>Rate</th>
                                                        <th>Amount</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in claim.Items)
                                                    {
                                                        <tr>
                                                            <td>@item.ModuleCode - @item.ModuleName</td>
                                                            <td>@item.HoursWorked</td>
                                                            <td>@item.HourlyRate.ToString("C")</td>
                                                            <td>@item.TotalAmount.ToString("C")</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                                <tfoot>
                                                    <tr class="table-active">
                                                        <th colspan="3">Total</th>
                                                        <th>@claim.TotalAmount.ToString("C")</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                        <div class="col-md-4">
                                            <h6>Documents (@claim.DocumentCount):</h6>
                                            @if (claim.Documents.Any())
                                            {
                                                <div class="list-group">
                                                    @foreach (var doc in claim.Documents)
                                                    {
                                                        <a href="@Url.Action("Download", "Documents", new { id = doc.DocumentId })"
                                                           class="list-group-item list-group-item-action">
                                                            <i class="@doc.Icon me-2"></i>
                                                            @doc.FileName
                                                            <br />
                                                            <small class="text-muted">@doc.FileSize</small>
                                                        </a>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <p class="text-muted">No documents</p>
                                            }

                                            <div class="mt-3">
                                                <p class="mb-1"><strong>Submitted:</strong> @claim.SubmissionDate.ToString("MMM dd, yyyy")</p>
                                                <p class="mb-1"><strong>Days Pending:</strong> @claim.DaysPending days</p>
                                                <p class="mb-1"><strong>Programmes:</strong> @string.Join(", ", claim.Programmes)</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-light">
                                    <div class="text-end">
                                        <a asp-action="ReviewClaim" asp-route-id="@claim.ClaimId" class="btn btn-primary">
                                            <i class="fas fa-eye me-1"></i>Full Review
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-check-double fa-4x text-success mb-3"></i>
                            <h4>No Claims Pending Review</h4>
                            <p class="text-muted">All coordinator-approved claims have been processed!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
