@model List<Contract_Monthly_Claim_System.Controllers.LecturerViewModel>
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title">HR Management Dashboard</h2>
        <a asp-action="GeneratePaymentReport" class="btn btn-success">
            <i class="fas fa-file-invoice-dollar me-2"></i>Generate Payment Report
        </a>
    </div>

    <div class="card card-custom mb-4">
        <div class="card-header bg-transparent">
            <h5 class="mb-0"><i class="fas fa-users-cog me-2"></i>Lecturer Management</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Employee #</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Hourly Rate (R)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lecturer in Model)
                            {
                                <tr>
                                    <td>@lecturer.EmployeeNumber</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary text-white rounded-circle p-2 me-2" style="width: 35px; height: 35px; display: flex; align-items: center; justify-content: center;">
                                                @(lecturer.FullName.Substring(0, 1))
                                            </div>
                                            @lecturer.FullName
                                        </div>
                                    </td>
                                    <td>@lecturer.Email</td>
                                    <td>
                                        <form asp-action="UpdateRate" method="post" class="d-flex align-items-center" style="max-width: 200px;">
                                            <input type="hidden" name="id" value="@lecturer.UserId" />
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">R</span>
                                                <input type="number" name="newRate" class="form-control"
                                                       value="@lecturer.HourlyRate" step="0.01" required />
                                                <button type="submit" class="btn btn-outline-primary" title="Update Rate">
                                                    <i class="fas fa-save"></i>
                                                </button>
                                            </div>
                                        </form>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-secondary" title="View Details">
                                            <i class="fas fa-info-circle"></i> Details
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-users-slash fa-3x mb-3"></i>
                    <p>No lecturers found in the system.</p>
                </div>
            }
        </div>
    </div>
</div>