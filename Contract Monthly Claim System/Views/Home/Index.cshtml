@using Contract_Monthly_Claim_System.Models.View
@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="page-title">Dashboard</h2>
            <p class="text-muted">Welcome back, @Model.UserName</p>
        </div>
    </div>

    <!-- Dashboard Statistics -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card card-custom text-center p-4 bg-gradient-primary text-white">
                <i class="fas fa-file-invoice fa-3x mb-3"></i>
                <h3>@Model.Stats.TotalClaims</h3>
                <p class="mb-0">Total Claims</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-custom text-center p-4 bg-warning text-white">
                <i class="fas fa-clock fa-3x mb-3"></i>
                <h3>@Model.Stats.PendingClaims</h3>
                <p class="mb-0">Pending Approval</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-custom text-center p-4 bg-success text-white">
                <i class="fas fa-check-circle fa-3x mb-3"></i>
                <h3>@Model.Stats.ApprovedClaims</h3>
                <p class="mb-0">Approved Claims</p>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card card-custom mb-4">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i>Recent Claims</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentClaims.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Claim #</th>
                                        <th>Month</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model.RecentClaims)
                                    {
                                        <tr>
                                            <td>@claim.ClaimNumber</td>
                                            <td>@claim.ClaimMonth.ToString("MMM yyyy")</td>
                                            <td>@claim.TotalAmount.ToString("C")</td>
                                            <td>
                                                <span class="badge @claim.StatusClass">
                                                    @claim.StatusDisplay
                                                </span>
                                            </td>
                                            <td>
                                                <a asp-controller="Claims" asp-action="Details" asp-route-id="@claim.ClaimId" class="btn btn-sm btn-outline-primary">
                                                    View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <p>No recent claims found.</p>
                            @if (User.IsInRole("Lecturer"))
                            {
                                <a asp-controller="Claims" asp-action="Create" class="btn btn-primary btn-sm">Create New Claim</a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Notifications -->
        <div class="col-lg-4">
            <div class="card card-custom">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="fas fa-bell me-2"></i>Notifications</h5>
                </div>
                <div class="card-body">
                    @if (Model.Notifications.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var notif in Model.Notifications)
                            {
                                <li class="list-group-item d-flex align-items-start">
                                    <div class="me-3 mt-1">
                                        <i class="@notif.Icon text-@notif.Type"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">@notif.Title</h6>
                                        <p class="mb-1 small">@notif.Message</p>
                                        <small class="text-muted">@notif.CreatedDate.ToString("MMM dd, HH:mm")</small>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-center text-muted my-3">No new notifications.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>