@using Contract_Monthly_Claim_System.Models.View
@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark navbar-custom border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-file-invoice-dollar me-2"></i>CMCS
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        @if (User.IsInRole("Lecturer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Claims" asp-action="Create">Submit Claim</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Claims" asp-action="Index">My Claims</a>
                        </li>
                        @if (User.IsInRole("ProgrammeCoordinator") || User.IsInRole("AcademicManager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Claims" asp-action="PendingApprovals">Pending Approvals</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Reports" asp-action="Index">Reports</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Documents" asp-action="Index">Documents</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <partial name="_Navigation" />
                </div>
            </nav>
            <main class="col-md-10 ms-sm-auto px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Contract Monthly Claim System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
