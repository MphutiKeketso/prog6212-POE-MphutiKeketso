@using Contract_Monthly_Claim_System.Models.DTOs
@using Contract_Monthly_Claim_System.Models.View
@model PagedResultDto<ClaimDetailsViewModel>
@{
    ViewData["Title"] = "My Claims";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="page-title">My Claims</h2>
    @if (User.IsInRole("Lecturer"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>New Claim
        </a>
    }
</div>

<!-- Search and Filter -->
<div class="card card-custom mb-4">
    <div class="card-header bg-transparent">
        <h5 class="mb-0"><i class="fas fa-search me-2"></i>Search & Filter</h5>
    </div>
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row">
                <div class="col-md-3">
                    <select name="Status" class="form-select">
                        <option value="">All Status</option>
                        @foreach (ClaimStatus status in Enum.GetValues<ClaimStatus>())
                        {
                            <option value="@status" selected="@(ViewBag.SearchDto?.Status == status)">
                                @status.ToString().Replace("_", " ")
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <input name="FromDate" type="date" class="form-control"
                           value="@ViewBag.SearchDto?.FromDate?.ToString("yyyy-MM-dd")" placeholder="From Date">
                </div>
                <div class="col-md-3">
                    <input name="ToDate" type="date" class="form-control"
                           value="@ViewBag.SearchDto?.ToDate?.ToString("yyyy-MM-dd")" placeholder="To Date">
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        <input name="SearchTerm" type="text" class="form-control"
                               value="@ViewBag.SearchDto?.SearchTerm" placeholder="Search claims...">
                        <button type="submit" class="btn btn-outline-secondary">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Claims Table -->
<div class="card card-custom">
    <div class="card-body">
        @if (Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                <a asp-action="Index" asp-route-sortBy="ClaimNumber"
                                   asp-route-sortDirection="@(ViewBag.SearchDto?.SortDirection == "ASC" ? "DESC" : "ASC")">
                                    Claim Number <i class="fas fa-sort"></i>
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortBy="ClaimMonth"
                                   asp-route-sortDirection="@(ViewBag.SearchDto?.SortDirection == "ASC" ? "DESC" : "ASC")">
                                    Month <i class="fas fa-sort"></i>
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortBy="SubmissionDate"
                                   asp-route-sortDirection="@(ViewBag.SearchDto?.SortDirection == "ASC" ? "DESC" : "ASC")">
                                    Submitted <i class="fas fa-sort"></i>
                                </a>
                            </th>
                            <th>Total Hours</th>
                            <th>
                                <a asp-action="Index" asp-route-sortBy="TotalAmount"
                                   asp-route-sortDirection="@(ViewBag.SearchDto?.SortDirection == "ASC" ? "DESC" : "ASC")">
                                    Amount <i class="fas fa-sort"></i>
                                </a>
                            </th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model.Items)
                        {
                            <tr>
                                <td>
                                    <strong>@claim.ClaimNumber</strong>
                                </td>
                                <td>@claim.ClaimMonth.ToString("MMM yyyy")</td>
                                <td>@claim.SubmissionDate.ToString("yyyy-MM-dd")</td>
                                <td>@claim.TotalHours.ToString("0.0")</td>
                                <td>@claim.TotalAmount.ToString("C")</td>
                                <td>
                                    <span class="status-badge status-@claim.Status.ToString().ToLower()">
                                        @claim.StatusDisplay
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@claim.ClaimId"
                                           class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (claim.CanEdit)
                                        {
                                            <a asp-action="Edit" asp-route-id="@claim.ClaimId"
                                               class="btn btn-sm btn-outline-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        <button type="button" class="btn btn-sm btn-outline-secondary"
                                                onclick="downloadClaimPdf(@claim.ClaimId)" title="Download PDF">
                                            <i class="fas fa-download"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Claims pagination">
                    <ul class="pagination justify-content-center mt-3">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>

                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                            </li>
                        }

                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No Claims Found</h4>
                <p class="text-muted">You haven't submitted any claims yet.</p>
                @if (User.IsInRole("Lecturer"))
                {
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Submit Your First Claim
                    </a>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function downloadClaimPdf(claimId) {
            window.open('/Claims/DownloadPdf/' + claimId, '_blank');
        }

        // Initialize tooltips
        $(document).ready(function() {
            $('[title]').tooltip();
        });
    </script>
}