@using Contract_Monthly_Claim_System.Models.View
@model ClaimDetailsViewModel
@{
    ViewData["Title"] = $"Claim Details - {Model.ClaimNumber}";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="page-title">@Model.ClaimNumber</h2>
        <p class="text-muted">Submitted by @Model.LecturerName on @Model.SubmissionDate.ToString("MMMM dd, yyyy")</p>
    </div>
    <div>
        <span class="status-badge status-@Model.Status.ToString().ToLower() fs-6">
            @Model.StatusDisplay
        </span>
    </div>
</div>

<!-- Claim Summary -->
<div class="claim-summary mb-4">
    <div class="row">
        <div class="col-md-3">
            <h6 class="text-light">Claim Period</h6>
            <h4>@Model.ClaimMonth.ToString("MMMM yyyy")</h4>
        </div>
        <div class="col-md-3">
            <h6 class="text-light">Total Hours</h6>
            <h4>@Model.TotalHours.ToString("0.0")</h4>
        </div>
        <div class="col-md-3">
            <h6 class="text-light">Total Amount</h6>
            <h4>@Model.TotalAmount.ToString("C")</h4>
        </div>
        <div class="col-md-3">
            <h6 class="text-light">Status</h6>
            <h4>@Model.StatusDisplay</h4>
        </div>
    </div>
</div>

<!-- Action Buttons -->
@if (Model.CanEdit || Model.CanApprove || Model.CanReject)
{
    <div class="mb-4">
        @if (Model.CanEdit)
        {
            <a asp-action="Edit" asp-route-id="@Model.ClaimId" class="btn btn-warning me-2">
                <i class="fas fa-edit me-1"></i>Edit Claim
            </a>
        }
        @if (Model.CanApprove)
        {
            <button type="button" class="btn btn-success me-2" onclick="showApprovalModal('approve', @Model.ClaimId)">
                <i class="fas fa-check me-1"></i>Approve
            </button>
        }
        @if (Model.CanReject)
        {
            <button type="button" class="btn btn-danger me-2" onclick="showApprovalModal('reject', @Model.ClaimId)">
                <i class="fas fa-times me-1"></i>Reject
            </button>
        }
        <button type="button" class="btn btn-outline-secondary" onclick="downloadClaimPdf(@Model.ClaimId)">
            <i class="fas fa-download me-1"></i>Download PDF
        </button>
    </div>
}

<div class="row">
    <!-- Claim Items -->
    <div class="col-md-8">
        <div class="card card-custom mb-4">
            <div class="card-header bg-transparent">
                <h5 class="mb-0"><i class="fas fa-list me-2"></i>Claim Items</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Module</th>
                                <th>Hours Worked</th>
                                <th>Rate</th>
                                <th>Amount</th>
                                <th>Work Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ClaimItems)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.ModuleCode</strong><br>
                                        <small class="text-muted">@item.ModuleName</small>
                                    </td>
                                    <td>@item.HoursWorked.ToString("0.0")</td>
                                    <td>@item.HourlyRate.ToString("C")</td>
                                    <td>@item.TotalAmount.ToString("C")</td>
                                    <td>@item.WorkDate.ToString("yyyy-MM-dd")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <th colspan="3">Total</th>
                                <th>@Model.TotalAmount.ToString("C")</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Supporting Documents -->
        @if (Model.Documents.Any())
        {
            <div class="card card-custom">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Supporting Documents</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var doc in Model.Documents)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="border rounded p-3 d-flex align-items-center">
                                    <i class="@doc.FileIcon fa-2x me-3"></i>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@doc.FileName</h6>
                                        <small class="text-muted">
                                            @doc.FileSizeDisplay | Uploaded @doc.UploadDate.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                    <div>
                                        <a href="@Url.Action("Download", "Documents", new { id = doc.DocumentId })"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Status History & Approvals -->
    <div class="col-md-4">
        <!-- Approval Details -->
        @if (Model.CoordinatorApproval != null || Model.ManagerApproval != null)
        {
            <div class="card card-custom mb-4">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="fas fa-check-circle me-2"></i>Approvals</h5>
                </div>
                <div class="card-body">
                    @if (Model.CoordinatorApproval != null)
                    {
                        <div class="mb-3">
                            <h6 class="text-success mb-1">
                                <i class="fas fa-user-tie me-1"></i>Programme Coordinator
                            </h6>
                            <p class="mb-1"><strong>@Model.CoordinatorApproval.ApproverName</strong></p>
                            <p class="mb-1 text-muted small">@Model.CoordinatorApproval.ApprovalDate.ToString("MMM dd, yyyy HH:mm")</p>
                            @if (!string.IsNullOrEmpty(Model.CoordinatorApproval.Comments))
                            {
                                <p class="small fst-italic">"@Model.CoordinatorApproval.Comments"</p>
                            }
                        </div>
                        <hr>
                    }

                    @if (Model.ManagerApproval != null)
                    {
                        <div>
                            <h6 class="text-success mb-1">
                                <i class="fas fa-user-graduate me-1"></i>Academic Manager
                            </h6>
                            <p class="mb-1"><strong>@Model.ManagerApproval.ApproverName</strong></p>
                            <p class="mb-1 text-muted small">@Model.ManagerApproval.ApprovalDate.ToString("MMM dd, yyyy HH:mm")</p>
                            @if (!string.IsNullOrEmpty(Model.ManagerApproval.Comments))
                            {
                                <p class="small fst-italic">"@Model.ManagerApproval.Comments"</p>
                            }
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Status History -->
        <div class="card card-custom">
            <div class="card-header bg-transparent">
                <h5 class="mb-0"><i class="fas fa-history me-2"></i>Status History</h5>
            </div>
            <div class="card-body">
                @foreach (var history in Model.StatusHistory.OrderByDescending(h => h.StatusChangeDate))
                {
                    <div class="d-flex mb-3">
                        <div class="flex-shrink-0">
                            <div class="bg-primary text-white rounded-circle p-2">
                                <i class="fas fa-circle fa-sm"></i>
                            </div>
                        </div>
                        <div class="ms-3">
                            <h6 class="mb-1">@history.StatusChangeDisplay</h6>
                            <p class="mb-1 small text-muted">
                                by @history.ChangedByName<br>
                                @history.StatusChangeDate.ToString("MMM dd, yyyy HH:mm")
                            </p>
                            @if (!string.IsNullOrEmpty(history.Comments))
                            {
                                <p class="small fst-italic">"@history.Comments"</p>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Approval Modal -->
<div class="modal fade" id="approvalModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="approvalModalTitle">Approve Claim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="approvalForm">
                <div class="modal-body">
                    <input type="hidden" id="claimId" name="ClaimId" value="@Model.ClaimId">
                    <input type="hidden" id="approvalAction" name="Action" value="">

                    <div class="mb-3">
                        <label for="approvalComments" class="form-label">Comments *</label>
                        <textarea id="approvalComments" name="Comments" class="form-control" rows="4" required
                                  placeholder="Please provide comments for your decision..."></textarea>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="notifyLecturer" name="NotifyLecturer" checked>
                        <label class="form-check-label" for="notifyLecturer">
                            Notify lecturer via email
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn" id="confirmApprovalBtn">Confirm</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/claim-details.js"></script>
}